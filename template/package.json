{
  "name": "{{ name }}",
  "description": "{{ description }}",
  "author": "{{ author }}",
  {{#private}}
  "private": true,
  {{/private}}
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "stylus": "stylus --watch --sourcemap-inline public/css/main.styl -o public/css/main.css && browser-sync reload --port 4000 --files='public/css/main.css'",
    "sync": "browser-sync start --ws -f 'public/css/main.css' --proxy localhost:3000 --port 4000 --reload-delay=300 --reload-debounce=500",
    "watchify": "watchify -p browserify-hmr client.js -o public/js/main.js",
    "serve": "nodemon -e pug server.js",
    "dev": "npm-run-all --parallel sync stylus watchify serve",
    "build": "cross-env NODE_ENV=production  -e client.js | uglifyjs -c warnings=false -m > public/js/main.js",
    "lint": "eslint --ignore-path .gitignore --ext .js,.vue ./ || exit 0",
    "test": "ava -v"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "ava": {
    "files": [
      "test/*.js"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": "default",
    "parser": "babel-eslint",
    "plugins": [
      "html"
    ]
  },
  "dependencies": {
    "body-parser": "^1.15.1",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "pug": "^2.0.0-beta3",
    "vue": "^1.0.24"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.8",
    "eslint": "^2.12.0",
    "eslint-config-default": "^0.1.0",
    "eslint-plugin-html": "^1.5.1",
    "nodemon": "^1.9.2",
    "npm-run-all": "^2.1.1",
    "stylus": "^0.54.5",
    "uglify-js": "^2.6.2",
    "vueify": "^8.5.4",
    "watchify": "^3.7.0"
  }
}
